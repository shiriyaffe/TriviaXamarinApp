<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TriviaXamarinApp.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to your last SHERUTEI RESHET work for this year!!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Start developing the new Trivia App!" FontSize="Title" Padding="30,10,30,10"/>
        <Label Text="Click the button below to test the code that calls the Trivia Web API through the TriviaWebApiProxy class!" FontSize="16" Padding="30,0,30,0"/>
        <Label FontSize="16" Padding="30,24,30,0">
            <Label.FormattedText>
                <FormattedString>
                    <FormattedString.Spans>
                        <Span Text="Ask Ofer or Tal if you have any question!"/>
                        <Span Text="   Good luck!!" FontAttributes="Bold"/>
                    </FormattedString.Spans>
                </FormattedString>
            </Label.FormattedText>
        </Label>
        <Button Text="Start Test" Clicked="Button_Clicked"/>
    </StackLayout>

</ContentPage>
